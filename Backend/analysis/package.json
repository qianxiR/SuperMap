{
  "name": "spatial-analysis-service",
  "version": "1.0.0",
  "description": "空间分析服务 - 基于DDD架构的缓冲区分析、相交分析、擦除分析、最短路径分析",
  "main": "src/app.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 --expose-gc src/app.js",
    "dev": "nodemon --exec \"node --max-old-space-size=4096 --expose-gc\" src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "node test-api.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "gis",
    "spatial-analysis",
    "ddd",
    "buffer",
    "intersection",
    "erase",
    "shortest-path"
  ],
  "author": "SuperMap Team",
  "license": "MIT",
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui": "^5.28.1",
    "swagger-ui-dist": "^5.11.0",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
