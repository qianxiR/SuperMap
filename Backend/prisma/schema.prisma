// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [postgis]
}

// 地理空间数据表
model Feature {
  id          String   @id @default(cuid())
  name        String
  type        String   // 要素类型: point, line, polygon
  properties  Json?    // GeoJSON properties
  geometry    Bytes?   // PostGIS geometry (使用 ST_GeomFromGeoJSON)
  layerId     String?
  layer       Layer?   @relation(fields: [layerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?
  
  @@map("features")
}

// 图层管理
model Layer {
  id          String    @id @default(cuid())
  name        String
  description String?
  type        String    // vector, raster, tile
  source      String    // supermap, local, external
  visible     Boolean   @default(true)
  style       Json?     // 图层样式配置
  config      Json?     // 图层配置参数
  features    Feature[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("layers")
}

// 空间分析结果
model Analysis {
  id          String   @id @default(cuid())
  type        String   // buffer, distance, accessibility
  name        String
  description String?
  parameters  Json     // 分析参数
  result      Json?    // 分析结果
  geometry    Bytes?   // 结果几何体
  status      String   @default("pending") // pending, running, completed, failed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?
  
  @@map("analysis")
}

// 用户管理 (可选)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String   // 加密存储
  role      String   @default("user") // admin, user
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

// 系统配置
model Config {
  id          String   @id @default(cuid())
  key         String   @unique
  value       Json
  description String?
  updatedAt   DateTime @updatedAt
  
  @@map("configs")
}